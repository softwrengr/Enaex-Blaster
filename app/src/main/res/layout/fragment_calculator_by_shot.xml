<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.calculators.CalculatorByShotFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/background"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:src="@drawable/menu"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp" />
        </RelativeLayout>

        <TextView
            android:layout_toRightOf="@+id/iv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Shot"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/layout_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_toRightOf="@+id/iv_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Options"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/medium"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/down_arrow"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="12dp"/>
                </RelativeLayout>

               <LinearLayout
                   android:id="@+id/calculator_shot_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/layout_option"
                   android:visibility="gone"
                   android:orientation="vertical">


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:orientation="horizontal">


                       <Button
                           android:id="@+id/btn_shot_metric"
                           android:layout_width="0dp"
                           android:layout_height="35dp"
                           android:layout_marginLeft="20dp"
                           android:layout_weight="1"
                           android:background="@color/silver"
                           android:text="Metric"
                           android:textSize="12sp"
                           android:textColor="@color/colorAccent" />

                       <Button
                           android:id="@+id/btn_shot_imperail"
                           android:layout_width="0dp"
                           android:layout_height="35dp"
                           android:layout_marginRight="20dp"
                           android:layout_weight="1"
                           android:background="@color/grey"
                           android:text="Imperial"
                           android:textSize="12sp"
                           android:textColor="@color/colorAccent" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:orientation="horizontal"
                       >


                       <Button
                           android:id="@+id/btn_weight"
                           android:layout_width="0dp"
                           android:layout_height="35dp"
                           android:layout_marginLeft="20dp"
                           android:layout_weight="1"
                           android:background="@color/grey"
                           android:text="By Weight"
                           android:textSize="12sp"
                           android:textColor="@color/colorAccent" />

                       <Button
                           android:id="@+id/btn_volume"
                           android:layout_width="0dp"
                           android:layout_height="35dp"
                           android:layout_marginRight="20dp"
                           android:layout_weight="1"
                           android:background="@color/silver"
                           android:text="By Volume"
                           android:textSize="12sp"
                           android:textColor="@color/colorAccent" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:orientation="horizontal"
                       >


                       <Button
                           android:id="@+id/btn_subDrill"
                           android:layout_width="0dp"
                           android:layout_height="35dp"
                           android:layout_marginLeft="20dp"
                           android:layout_weight="1"
                           android:background="@color/silver"
                           android:text="SubDrill"
                           android:textSize="12sp"
                           android:textColor="@color/colorAccent" />

                       <Button
                           android:id="@+id/btn_standOFf"
                           android:layout_width="0dp"
                           android:layout_height="35dp"
                           android:layout_marginRight="20dp"
                           android:layout_weight="1"
                           android:background="@color/grey"
                           android:text="Standoff"
                           android:textSize="12sp"
                           android:textColor="@color/colorAccent" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:orientation="horizontal"
                       >


                       <Button
                           android:id="@+id/btn_no_of_holes"
                           android:layout_width="0dp"
                           android:layout_height="35dp"
                           android:layout_marginLeft="20dp"
                           android:layout_weight="1"
                           android:background="@color/silver"
                           android:text="No. of Holes"
                           android:textSize="12sp"
                           android:textColor="@color/colorAccent" />

                       <Button
                           android:id="@+id/btn_hole_row_count"
                           android:layout_width="0dp"
                           android:layout_height="35dp"
                           android:layout_marginRight="20dp"
                           android:layout_weight="1"
                           android:textSize="12sp"
                           android:background="@color/grey"
                           android:text="Holes and Row Count"
                           android:textColor="@color/colorAccent" />
                   </LinearLayout>

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="25dp"
                           android:fontFamily="@font/medium"
                           android:gravity="center"
                           android:text="Vibration"
                           android:textSize="18sp"
                           android:textStyle="bold" />

                       <Switch
                           android:id="@+id/switch_vibration"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentEnd="true"
                           android:layout_marginRight="20dp"
                           android:checked="false" />

                   </RelativeLayout>
               </LinearLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutDirectHole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/noholes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Number of Holes"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/et_shot_holes"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/noholes"
                    android:hint="0"
                    android:imeOptions="actionNext"
                    android:inputType="number" />



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layoutRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/norow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Number of rows"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_shot_rows"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/norow"
                    android:hint="0"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutHole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/holes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Holes per Row"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/et_holePerRow"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/holes"
                    android:hint="0"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />


            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Hole Diameter"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_shot_diameter"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:hint="0.000"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />

                <TextView
                    android:id="@+id/shot_diameter_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/et_shot_diameter"
                    android:text="mm"
                    android:textColor="@color/silver" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Explosive Density"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_shot_density"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:hint="0.00"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />

                <TextView
                    android:id="@+id/shot_explosive_density_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/et_shot_density"
                    android:text="g/cc"
                    android:textColor="@color/silver" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Burden"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_shot_burden"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:hint="0.0"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />

                <TextView
                    android:id="@+id/shot_burden_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/et_shot_burden"
                    android:text="m"
                    android:textColor="@color/silver" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Spacing"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_shot_spacing"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:hint="0.0"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />

                <TextView
                    android:id="@+id/shot_spacing_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/et_shot_spacing"
                    android:text="m"
                    android:textColor="@color/silver" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Bench Height"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_shot_bench_height"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:hint="0.0"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />

                <TextView
                    android:id="@+id/shot_bench_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/et_shot_bench_height"
                    android:text="m"
                    android:textColor="@color/silver" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subdrill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Subdrill"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/et_shot_subdrill"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/subdrill"
                    android:hint="0.0"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />

                <TextView
                    android:id="@+id/shot_subdrill_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/et_shot_subdrill"
                    android:text="m"
                    android:textColor="@color/silver" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Stem Length"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_shot_stemming"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:hint="0.0"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />

                <TextView
                    android:id="@+id/shot_stem_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/et_shot_stemming"
                    android:text="m"
                    android:textColor="@color/silver" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layoutRock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <TextView
                    android:id="@+id/rock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Rock Density"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/et_rock_density"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/rock"
                    android:hint="0.00"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />

                <TextView
                    android:id="@+id/shot_rock_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/et_rock_density"
                    android:text="g/cc"
                    android:textColor="@color/silver" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/hole8ms_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/hole8ms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Holes per 8ms"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_shot_hole_ms"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/hole8ms"
                    android:text="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />

                <TextView
                    android:id="@+id/shot_ms_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/et_shot_hole_ms"
                    android:text="count"
                    android:textColor="@color/silver" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Distance"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_shot_distance"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/tv_dis"
                    android:hint="0.0"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />

                <TextView
                    android:id="@+id/shot_distance_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/et_shot_distance"
                    android:text="m"
                    android:textColor="@color/silver" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/layout_scaling_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/factor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Scaling Factor (k or H)"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/et_shot_scalling"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/factor"
                    android:text="160"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|numberDecimal" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_attenuation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tv_att"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Attenuation Factor (b or a)"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_shot_attenuation"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_att"
                    android:layout_marginLeft="20dp"
                    android:text="-1.6"
                    android:imeOptions="actionDone"
                    android:inputType="numberSigned|numberDecimal" />
x`

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bold"
                android:text="Result"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/bold"
                    android:text="Total No of Holes : "
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_total_holes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="0"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/bold"
                    android:text="Hole Length  : "
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_shot_lenght"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="0.0 m"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
